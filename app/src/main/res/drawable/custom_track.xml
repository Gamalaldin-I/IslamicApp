<!-- res/drawable/custom_track.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background track -->
    <item>
        <shape android:shape="rectangle">
            <!-- Rounded corners for background -->
            <corners android:radius="12dp"/> <!-- Adjust radius to your liking -->
            <solid android:color="#00FFD64D"/> <!-- Background track color -->
            <size android:height="12dp"/> <!-- Track height -->
        </shape>
    </item>

    <!-- Progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- Rounded corners for progress -->
                <corners android:radius="12dp"
                    />
                <!-- Adjust radius to match background -->

                <gradient android:startColor="@color/gradient1"
                    android:centerColor="@color/gradient2"
                    android:endColor="@color/gradient3"/> <!-- Progress color -->
                <size android:height="5dp"/> <!-- Same as background height -->
            </shape>
        </clip>
    </item>
</layer-list>
